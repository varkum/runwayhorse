<%= form_with model: [ trip, lodging ], url: url do |form| %>
	<div class="max-w-sm px-4 mx-auto">
		<div class="my-5">
			<%= form.label :name, class: "font-bold text-slate-700" %>
			<%= form.text_field :name, placeholder: "e.g. Oslo Airbnb, Delhi hotel", required: true, class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
		</div>
		
		<%= form.label :dates, class: "font-bold text-slate-700" %>
		<div class="mb-5 flex items-center">
			<%= form.select :start, options_for_select(trip.days.map { |day| [day.date.strftime("%a, %b. %d"), day.date] }, lodging.start_date || day&.date), {}, class: "text-xs sm:text-base min-w-32 block rounded-md border border-gray-200 outline-none" %>
			<span class="mx-2">â€”</span>
			<%= form.select :end, options_for_select(trip.days.map { |day| [day.date.strftime("%a, %b. %d"), day.date] }, lodging.end_date || day&.date), {}, class: "text-xs sm:text-base min-w-32 block rounded-md border border-gray-200 outline-none" %>
		</div>
	
		<div class="my-5">
			<%= form.label "Location", class: "font-bold text-slate-700" %>
			<%= form.text_field :address, placeholder: "e.g. 10 Main St", class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
		</div>
	
		<div class="my-5">
			<%= form.label "Link", class: "font-bold text-slate-700" %>
			<%= form.text_field :link, placeholder: "e.g. to airbnb, expedia, or hotel website", class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
		</div>
	
		<div class="my-5">
			<%= form.label :notes, class: "font-bold text-slate-700" %>
			<%= form.text_area :notes, rows: 5, placeholder: "e.g. check-in instructions, breakfast details, pool or not", class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
		</div>
	
	  <div class="text-center">
	  	<%= form.submit class: "rounded-lg py-3 px-5 bg-green-600 text-white font-medium cursor-pointer" %>
		</div>
			
	 
	</div>
<% end %>
