<div class="slide-in-left flex flex-col items-center justify-center w-full h-[80vh] mt-4">
	<h1 class="font-bold text-2xl text-center text-orange-600">Forgot your password?</h1>
	<h3 class="text-gray-500 text-lg text-center mt-5">Enter the email for your RunwayHorse account</h3>
	
	<%= form_with(url: password_resets_path, class: "contents") do |form| %>
		<div class="w-80 px-4">
		  <div class="my-5">
		    <%= form.email_field :email, required: "true", autofocus: true, class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
		  </div>

		  <div class="flex flex-col items-center justify-center">
		    <%= form.submit "Send me a reset link", class: "rounded-3xl py-2 px-5 bg-indigo-600 text-white inline-block font-medium cursor-pointer" %>
		  </div>
		</div>
	<% end %>
</div>