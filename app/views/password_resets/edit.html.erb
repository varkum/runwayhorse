<div class="flex flex-col items-center justify-center w-full h-[80vh] mt-4">
	<h1 class="font-bold text-2xl text-center text-orange-600">Let's reset your password</h1>
	
	<%= form_with url: password_resets_path(user: @user), method: :patch, data: { turbo: false }, class: "contents" do |form| %>
		<div class="w-80 px-4">
		  <div class="my-5">
				<%= form.label :password, class: "font-bold text-slate-700" %>
				<p class="text-xs italic text-gray-500 mb-1">8 characters minimum please</p>
				<%= form.password_field :password, placeholder: "Your password", required: true, minlength: 8, autocomplete: "new-password", class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
		  </div>
			
		  <div class="my-5">
				<%= form.label :password_confirmation, class: "font-bold text-slate-700" %>
				<%= form.password_field :password_confirmation, placeholder: "And again", required: true, minlength: 8, autocomplete: "new-password", class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
		  </div>

		  <div class="flex flex-col items-center justify-center">
		    <%= form.submit "Save my new password", class: "rounded-3xl py-2 px-5 bg-indigo-600 text-white inline-block font-medium cursor-pointer" %>
		  </div>
		</div>
	<% end %>
</div>