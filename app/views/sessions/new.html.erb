<div class="flex flex-col items-center justify-center w-full h-[80vh] mt-4">
	<h1 class="font-bold text-2xl text-center text-orange-600">Welcome back. Let's sign in.</h1>
	
	<%= form_with(url: signin_path, data: { turbo: false }, class: "contents") do |form| %>
		<div class="w-80 px-4">
		  <div class="my-5">
		    <%= form.label :email, class: "font-bold text-slate-700" %>
		    <%= form.text_field :email, required: "true", autocomplete: "email", autocorrect: "off", autocapitalize: "off", class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
		  </div>

		  <div class="my-5">
		    <%= form.label :password, class: "font-bold text-slate-700" %>
		    <%= form.password_field :password, required: "true", autocomplete: "current-password", class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
		  </div>

		  <div class="flex flex-col items-center justify-center">
		    <%= form.submit "Sign in", class: "rounded-3xl py-2 px-5 bg-indigo-600 text-white inline-block font-medium cursor-pointer" %>
				<%= link_to "Forgot your password?", new_password_resets_path, class: "text-sm underline font-semibold text-center text-blue-500 mt-6" %>
		  </div>
		</div>
	<% end %>
</div>