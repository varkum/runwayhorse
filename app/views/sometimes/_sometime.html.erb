<div id="<%= dom_id sometime %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Trip:</strong>
    <%= sometime.trip_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= sometime.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Completed:</strong>
    <%= sometime.completed %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this sometime", sometime, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this sometime", edit_sometime_path(sometime), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
