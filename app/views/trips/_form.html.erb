<%= form_with(model: trip, url: trips_path(id: trip.id), method: :post, data: { controller: "trip-validations" }) do |form| %>
  <div class="max-w-sm px-4 mx-auto bg-orange-50 rounded-2xl shadow-lg pt-2 pb-6 mt-4">

	  <div class="my-5">
	    <%= form.label :name, class: "font-bold text-slate-700" %>
	    <%= form.text_field :name, value: "", placeholder: "Enter a trip name", required: "true", class: "block w-full border-none outline outline-1 outline-gray-300 rounded" %>
	  </div>

	  

	  <div class="mt-6 flex items-center justify-between">
		  <div>
		    <%= form.label :start_date, class: "font-bold text-slate-700" %>
		    <%= form.date_field :start_date, value: Date.today, min: Date.today, required: true, class: "block min-w-32 border-none outline outline-1 outline-gray-300 rounded", data: { trip_validations_target: "start" } %>
		  </div>
			
			<div>
		    <%= form.label :end_date, class: "font-bold text-slate-700" %>
		    <%= form.date_field :end_date, value: Date.tomorrow, required: true, class: "block min-w-32 border-none outline outline-1 outline-gray-300 rounded", data: { trip_validations_target: "end", action: "input->trip-validations#validateDates"} %>
			</div>
	  </div>
		<p class="mt-1 text-red-500 text-xs font-semibold" data-trip-validations-target="msg">Your trip can't be longer than 3 months</p>
		
		
	  
	</div>
  <div class="text-center my-5">
    <%= form.submit "Start planning your trip", class: "rounded-lg text-lg py-3 px-5 bg-green-600 text-white font-medium cursor-pointer" %>
  </div>
<% end %>
