<%= turbo_frame_tag "trip_notes" do %>
	<div class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50">
	  <div class="relative h-full w-full flex flex-col justify-between sm:h-2/3 sm:w-2/3 bg-white p-6 rounded-lg shadow-lg">
			<div>
		    <h2 class="text-xl font-bold mb-2 text-center">Trip Notes</h2>
				<p class="text-slate-500 text-sm">
					Add any random info you want here. Organize it however you like (by location for example)
				</p>
			</div>
	    <%= form_with model: @trip, class: "contents", data: { controller: "edit-day" } do |form| %>
				<%= form.text_area :notes, autofocus: true, class: "h-5/6 mt-4 border border-gray-300 w-full rounded-lg focus:ring-0 focus:border-gray-300", data: { action: "focus->edit-day#setCursor" }%>
				
				<div class="text-right">
					<%= form.submit "Done", class: "mt-3 w-fit bg-green-500 text-white px-2 py-1 rounded-full font-semibold hover:cursor-pointer hover:bg-green-600" %>
				</div>
			<% end %>
	  </div>
	</div>
<% end %>