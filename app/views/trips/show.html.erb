<div class="w-2/3 h-full mx-auto flex flex-col flex-grow items-center justify-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
	<div id="trip-header" class="w-full text-center">
		<h3 class="font-bold text-2xl"><%= @trip.name %></h3>
		<p><%= human_date(@trip.start_date) %> to <%= human_date(@trip.end_date) %></p>
  </div>
	
	<div id="trip-actions" class="flex grow items-center justify-center gap-x-8">
		<%= link_to trip_transportations_path(@trip), class: "bg-white p-16 font-bold rounded-lg border-2 border-slate-400" do %>
			<%= image_tag "truck.svg", class: "h-12 w-auto mx-auto" %>
			<p>Transportation</p>
		<% end %>
		<%= link_to day_path(@trip.days.first), class: "bg-white p-16 font-bold rounded-lg border-2 border-slate-500" do %>
			<%= image_tag "calendar.svg", class: "h-12 w-auto mx-auto" %>
			<p>Day by Day</p>
		<% end %>
  </div>
	
	<% if @trip.transportations.any? %>
		<%= turbo_frame_tag "summary", src: trip_summaries_path(@trip) %>
	<% end %>
</div>
