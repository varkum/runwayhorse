<div class="px-2 sm:max-w-screen-lg h-full mx-auto text-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
	<div id="trip-header" class="w-full text-center">
		<%= turbo_frame_tag "edit_trip_name", class: "contents" do %>
			<%= link_to @trip.name, edit_trip_path(@trip), class: "font-semibold text-xl sm:text-2xl hover:bg-gray-200 p-2 rounded-lg" %>
		<% end %>
		
		<div class="mt-1">
			<%= turbo_frame_tag "edit_trip_start", class: "contents" do %>
				<%= link_to human_date(@trip.start_date), edit_trip_path(@trip), class: "text-teal-700 hover:bg-gray-200 p-1 rounded-lg", data: { turbo_method: :get, turbo_confirm: "Changing trip dates might delete work you've already done. Do you want to continue?" }  %>
			<% end %>
			â€”
			<%= turbo_frame_tag "edit_trip_end", class: "contents" do %>
				<%= link_to human_date(@trip.end_date), edit_trip_path(@trip), class: "text-teal-700 hover:bg-gray-200 p-1 rounded-lg", data: { turbo_method: :get, turbo_confirm: "Changing trip dates might delete work you've already done. Do you want to continue?" }  %>
			<% end %>
		</div>
  </div>
	
	<div class="flex flex-col justify-around h-4/5 mt-8">
		<div id="trip-actions" class="flex items-center justify-evenly w-full gap-x-4 font-medium">
			<%= link_to trip_transportations_path(@trip), class: "text-center w-52 h-48 divide-y rounded-xl bg-slate-100 py-2" do %>
				<p>Transportation</p>
				<div>
					<%= image_tag "grey_truck.svg", class: "h-12 w-auto mx-auto my-2" %>
					<p class="text-gray-500 font-light text-sm px-2">All your flights, trains, and drives. See where you're going and how you're getting there.</p>
				</div>
			<% end %>
			<%= link_to day_path(@trip.days.first), class: "text-center w-52 h-48 divide-y rounded-xl bg-slate-100 py-2" do %>
				<p>Day by Day</p>
				<div>
					<%= image_tag "calendar.svg", class: "h-12 w-auto mx-auto my-2" %>
					<p class="text-gray-500 font-light text-sm px-2">The plan for each day. Add bookings, restaurants, trip todos, and notes.</p>
				</div>
			<% end %>
			<%= link_to trip_lodgings_path(@trip), class: "text-center w-52 h-48 divide-y rounded-xl bg-slate-100 py-2" do %>
				<p>Lodging</p>
				<div>
					<%= image_tag "home.svg", class: "h-12 w-auto mx-auto my-2" %>
					<p class="text-gray-500 font-light text-sm px-2">All your hotels and Airbnbs. Add check-in info, links, and addresses.</p>
				</div>
			<% end %>
	  </div>
	
		<% if @trip.transportations.any? %>
			<%= turbo_frame_tag "summary", class: "contents", src: trip_summaries_path(@trip) %>
		<% end %>
	</div>
</div>
