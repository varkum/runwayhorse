<div class="px-2 sm:w-2/3 h-full mx-auto flex flex-col flex-grow items-center justify-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
	<div id="trip-header" class="w-full text-center">
		<%= turbo_frame_tag "edit_trip_name", class: "contents" do %>
			<%= link_to @trip.name, edit_trip_path(@trip), class: "font-semibold text-xl sm:text-2xl hover:bg-gray-200 p-2 rounded-xl" %>
		<% end %>

		<p class="font-regular">
			<%= human_date(@trip.start_date) %> to <%= human_date(@trip.end_date) %>
		</p>
  </div>
	
	<div id="trip-actions" class="flex grow items-center justify-evenly w-full gap-x-4 font-medium">
		<%= link_to trip_transportations_path(@trip), class: "bg-white text-center" do %>
			<%= image_tag "truck.svg", class: "h-10 w-auto mx-auto" %>
			<p>Transportation</p>
		<% end %>
		<%= link_to day_path(@trip.days.first), class: "bg-white text-center" do %>
			<%= image_tag "calendar.svg", class: "h-10 w-auto mx-auto" %>
			<p>Day by Day</p>
		<% end %>
		<%= link_to trip_lodgings_path(@trip), class: "bg-white" do %>
			<%= image_tag "home.svg", class: "h-10 w-auto mx-auto" %>
			<p>Lodging</p>
		<% end %>
  </div>
	
	<% if @trip.transportations.any? %>
		<%= turbo_frame_tag "summary", src: trip_summaries_path(@trip) %>
	<% end %>
</div>
