<%= turbo_frame_tag "share" do %>
	<div class="w-fit mx-auto">
		<div class="flex rounded-md border border-grey-500">
			<p class="max-w-48 p-2 text-xs text-slate-400 overflow-auto select-text text-nowrap"><%= share_trip_url(id: @trip_token) %></p>
			<button class="text-xs font-semibold text-center bg-gray-200 p-2 select-none">Copy</button>
		</div>
		<%= link_to "Done", :back, class: "ml-2 font-medium text-xs text-blue-500" %>
	</div>
<% end %>