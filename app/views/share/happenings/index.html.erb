<div class="w-full">
	<div class="relative mb-8 sm:mb-12">
		<h1 class="font-bold text-2xl sm:text-4xl text-center">Transportation</h1>
	</div>
	
	<% if @happenings.any? %>
		<div class="px-4 lg:px-40">
	  	<%= render @happenings, day_by_day: false %>
		</div>
	<% else %>
		<p class="mx-auto max-w-sm px-4 font-medium text-gray-500">
			Nothing to show yet. Start by adding flights to and from home!
		</p>
	<% end %>
</div>
