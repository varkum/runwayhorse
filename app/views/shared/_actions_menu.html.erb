<div class="self-end flex gap-2 items-center min-w-fit">
	<%= link_to "Edit", edit_polymorphic_path(type, { id: item.id, day: local_assigns[:day] }), class: "font-semibold text-xs sm:text-sm text-slate-600", data: { admin: "true" }%>
	<%= button_to polymorphic_path(type, { id: item.id, day: local_assigns[:day] }), method: :delete, form: { data: { turbo_frame: "_top", turbo_confirm: "Are you sure you want to delete this #{type}?", admin: "true" } } do %>
		<%= image_tag "trash.svg", class: "h-3 sm:h-5 w-auto" %>
	<% end %>
</div>

