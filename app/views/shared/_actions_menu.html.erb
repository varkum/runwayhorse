<div class="self-end flex gap-2 items-center">
	<%= link_to "Edit", edit_polymorphic_path(type, { id: item.id }), class: "font-semibold text-sm text-slate-600", data: { admin: "true" }%>
	<%= button_to polymorphic_path(type, { id: item.id }), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this #{type}?", admin: "true" } } do %>
		<%= image_tag "trash.svg", class: "h-5 w-auto" %>
	<% end %>
</div>

