<div class="self-end flex gap-1 ml-1 items-center min-w-8">
	<%= link_to edit_polymorphic_path([ :trip, type ], { trip: item.trip, id: item.id, day: local_assigns[:day] }), class: "font-semibold text-xs sm:text-sm text-slate-600", data: { admin: "true" } do %>
		<%= image_tag "pencil.svg", class: "h-3 sm:h-4 w-auto" %>
	<% end %>
	<%= button_to polymorphic_path([ :trip, type ], { trip: item.trip, id: item.id, day: local_assigns[:day] }), method: :delete, form: { data: { turbo_frame: "_top", turbo_confirm: "Are you sure you want to delete this #{type}?", admin: "true" } } do %>
		<%= image_tag "trash.svg", class: "h-3 sm:h-4 w-auto" %>
	<% end %>
</div>

