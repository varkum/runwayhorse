<div id="<%= dom_id day %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Homebase:</strong>
    <%= day.homebase %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= day.location %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Notes:</strong>
    <%= day.notes %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Trip:</strong>
    <%= day.trip_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this day", day, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this day", edit_day_path(day), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
