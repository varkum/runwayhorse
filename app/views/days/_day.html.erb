<div class="w-full justify-center" id="<%= dom_id day %>">
	<div id="day-header">
		<h3 class="font-medium text-xl text-center border-solid border-b-2 border-gray-300"><%= human_date(day.date, no_year: true)%></h3>
		<div class="flex justify-evenly mt-3 gap-x-4">
			<%= show_button_or_value(value: day.homebase, display_name: "homebase", icon: "home") %>
			<%= show_button_or_value(value: day.location, display_name: "location", icon: "map_pin") %>
		</div>
	</div>
  
	<% if day.happenings.empty? %>
		NOTHING
	<% else %>
		<div class="divide-y mt-5">
			<% day.happenings.each do |happening| %>
				<%= render happening, day_by_day: true %>
			<% end %>
		</div>
	<% end %>

	<div class="absolute bottom-10 border-t-2 border-dashed border-indigo-600 w-full">
    <strong class="block font-medium mb-1">Notes:</strong>
    <%= day.notes %>
	</div>
</div>
