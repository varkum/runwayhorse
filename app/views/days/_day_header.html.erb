<p class="flex flex items-center justify-center px-4 py-2 text-gray-500">
	<%= image_tag "#{icon}.svg", class: "h-6 w-auto mr-1" %>
	<%= turbo_frame_tag display_name do %>
		<%= link_to edit_day_path, "admin-link": "true" do %>
			<% if value.present? %>
				<span>
					<%=
						auto_link(value, html: { class: "text-blue-500 underline", target: '_blank' }) do |text|
							truncate(text, length: 0, omission: 'link')
						end
					%>
				</span>
			<% else %>
				<span class="text-xs sm:text-sm font-light">Add <%= display_name %></span>
			<% end %>
		<% end %>
	<% end %>
</p>
	